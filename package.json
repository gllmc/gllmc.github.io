{
    "dependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "@tailwindcss/typography": "^0.5.19",
        "tailwindcss": "^4.1.14"
    },
    "scripts": {
        "build": "npx @tailwindcss/cli -i ./theme/input.css -o ./static/css/tailwind-output.css --minify && zola build",
        "watch": "concurrently 'npx @tailwindcss/cli -i ./theme/input.css -o ./static/css/tailwind-output.css --watch' 'zola serve'"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14"
    }
}
